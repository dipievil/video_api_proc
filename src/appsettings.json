{
  // ========================================
  // üéØ MAIN CONFIGURATION - USER CONFIG
  // ========================================
  // For local use and basic configuration
  // For Docker/production, use appsettings.docker.json or appsettings.Production.json
  
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  
  // ========================================
  // üåê SERVER CONFIGURATION
  // ========================================
  "Kestrel": {
    "EndPoints": {
      "Http": {
        "Url": "http://localhost:5000"
      }
    }
  },
  "UseHttpsRedirection": false,
  
  // ========================================
  // üíæ DATABASE
  // ========================================
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=jobs.db"
  },
  
  // ========================================
  // üìπ VIDEO API CONFIGURATION
  // ========================================
  "Api": {
    // Allowed file types for upload
    "AllowedFileTypes": [".mp4", ".avi", ".mov", ".mkv", ".wmv", ".flv"],
    // Maximum size per file (500MB in bytes)
    "MaxFileSizeBytes": 524288000,
    // Jobs that can process simultaneously
    "MaxConcurrentJobs": 3,
    // Directories for files
    "UploadsPath": "uploads",
    "ProcessedPath": "processed",
    // Time to keep processed files
    "FileRetentionPeriod": "7.00:00:00"
  },
  
  // ========================================
  // üíø STORAGE CONFIGURATION
  // ========================================
  "Storage": {
    // Options: "FileSystem" or "MinIO"
    "Provider": "FileSystem",
    "FileSystem": {
      "BasePath": "./"
    },
    // MinIO configuration (optional)
    "MinIO": {
      "Endpoint": "localhost:9000",
      "AccessKey": "minioadmin",
      "SecretKey": "minioadmin123",
      "UseSSL": false,
      "BucketName": "video-processing",
      "CreateBucketIfNotExists": true
    }
  },
  
  // ========================================
  // üé¨ FFMPEG CONFIGURATION
  // ========================================
  "FFmpeg": {
    // Path to FFmpeg binary
    "BinaryPath": "ffmpeg",
    // Processing timeout (in minutes)
    "TimeoutMinutes": 30,
    // Default quality for conversions
    "DefaultQuality": "medium",
    // Available quality presets
    "QualityPresets": {
      "low": "fast",
      "medium": "medium", 
      "high": "slow",
      "ultra": "slower"
    }
  },
  
  // ========================================
  // üîê SECURITY CONFIGURATION
  // ========================================
  "Security": {
    // ‚ö†Ô∏è IMPORTANT: Change these keys in production!
    "ApiKeys": [
      "CHANGE-ME-dev-key-12345"
    ],
    "RateLimit": {
      "MaxRequestsPerMinute": 30,
      "MaxRequestsPerHour": 1000,
      "MaxRequestsPerDay": 10000
    },
    "Cors": {
      "AllowedOrigins": ["http://localhost:3000", "http://localhost:8080", "http://localhost:5173"],
      "AllowedMethods": ["GET", "POST", "PUT", "DELETE"],
      "AllowedHeaders": ["Content-Type", "Authorization", "X-API-Key"]
    }
  },
  
  // ========================================
  // üìù LOGGING CONFIGURATION
  // ========================================
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/api-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId"]
  }
}